name: CI/CD Pipeline

on:
  push:
    branches:
      - main
    tags:
      - 'v*.*.*'  # Публикация при добавлении тегов, начинающихся с "v"

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Go
        uses: actions/setup-go@v2
        with:
          go-version: '1.20'  # Укажите вашу версию Go

      - name: Install dependencies
        run: go mod tidy

      - name: Run tests
        run: go test ./... -v

  publish:
    runs-on: ubuntu-latest
    needs: build  # Зависимость от job build

    if: startsWith(github.ref, 'refs/tags/')  # Проверка на тег

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v1

      - name: Log in to DockerHub
        uses: docker/login-action@v1
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build and push Docker image
        uses: docker/build-push-action@v2
        with:
          context: .
          push: true
          tags: your-dockerhub-username/your-image-name:${{ github.ref }}  # Используйте имя вашего образа
